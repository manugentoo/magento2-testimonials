<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="Manugentoo_testimonials" resource="default">
        <column comment="Id" identity="true" name="testimonial_id" nullable="false" padding="6" unsigned="false" xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="testimonial_id"/>
        </constraint>
        <column length="255" name="name" nullable="true" xsi:type="varchar"/>
        <column length="255" name="company_name" nullable="true" xsi:type="varchar"/>
        <column length="255" name="company_image" nullable="true" xsi:type="varchar"/>
        <column name="comment" nullable="true" xsi:type="text"/>
        <column name="created_at" nullable="true" xsi:type="date"/>
    </table>
</schema>
